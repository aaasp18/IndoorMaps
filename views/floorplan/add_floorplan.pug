extends ../layout

block title
    title #{title}

block head
    link(rel='stylesheet', href='/stylesheets/addfloorplan.css')
    script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyAEd76xkK9HeABLRAe_9mCmoNLs6jc9Zu8')

block content
    div#container
      div#floorplan-form
        p#building-name #{building.name}
        button.accordion Step 1
        include add_coordinates
        button.accordion Step 2
        include upload_image
        button.accordion Step 3
        include add_pois
      div#map        
    div(style='clear:both')

block script
    script(src='javascripts/floorplan_client.js')
    script(src='javascripts/step1_add_coordinates.js')
    script(src='javascripts/step2_upload_floorplan.js')
    script(src='javascripts/step3_add_pois.js')
    script(src='javascripts/overlay.js')
    script(src='javascripts/fpoverlay.js')
    script(src='javascripts/latlng.js')
    