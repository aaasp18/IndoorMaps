.mdl-card.mdl-shadow--2dp.demo-card-square
  .mdl-card__title.mdl-card--expand
    h2.mdl-card__title-text #{location.name}
  .mdl-card__supporting-text.text_area
    div
      b No. of buildings : 
      | #{location.buildings}
    div
      b  City : 
      | #{location.city}
  .mdl-card__actions.mdl-card--border
    a.mdl-button.mdl-button--accent.mdl-js-button.mdl-js-ripple-effect(href='/buildings?id=' + location.encryptId)
      | View
  .mdl-card__menu
    form(method="POST" action="/locations/deletelocation")
      input#locationId(type="hidden" name="locationId" value=location.locationId)
      button.mdl-button.mdl-button--icon.mdl-js-button.mdl-js-ripple-effect(type='submit', name='submit')
        i.material-icons delete