extends ../layout

block title
	title Room Form

block head
	link(rel='stylesheet', href='/stylesheets/form.css')

block content
	include ../nav_drawer.pug
		
	main#form_main.web-main.mdl-layout__content
		br
		br
		br
		.mdl-grid.portfolio-max-width
			.mdl-cell.mdl-cell--6-col.mdl-cell--hide-tablet.mdl-cell--hide-phone
			.mdl-cell.mdl-cell--6-col.mdl-card.mdl-shadow--4dp
				#form_create_class
					h3 Add a Room
					form(method="POST" action="/addroom" autocomplete="off")
						.mdl-textfield.mdl-js-textfield
							input.mdl-textfield__input(type="text" name="name" placeholder="Room Name (Eg. Room 101)" required="")
						.mdl-textfield.mdl-js-textfield
							input.mdl-textfield__input(type="text" name="label" placeholder="Room Label (Eg Audio Visual Room)" required="")
						.mdl-textfield.mdl-js-textfield
							input.mdl-textfield__input(type="number" name="floor" placeholder="Floor No." required="" min="1")
						br
						input.rc-button.rc-button-submit(type="submit" value="Submit")
					br

