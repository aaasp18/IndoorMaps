.mdl-card.mdl-shadow--2dp.demo-card-square
  .mdl-card__title.mdl-card--expand
    h2.mdl-card__title-text #{room.name}
  .mdl-card__supporting-text.text_area
    div
      b  Room : 
      | #{room.label}
    div
      b Floor number : 
      | #{room.floor}
  .mdl-card__actions.mdl-card--border
    a.mdl-button.mdl-button--accent.mdl-js-button.mdl-js-ripple-effect
      | View
  .mdl-card__menu
    form(method="POST" action="/rooms/deleteroom")
      input#roomId(type="hidden" name="roomId" value=room.roomId)
      button.mdl-button.mdl-button--icon.mdl-js-button.mdl-js-ripple-effect(type='submit', name='submit')
        i.material-icons delete